<Window x:Class="BasicRunner.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicRunner"
        xmlns:modern="http://modernwpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Launcher" Height="250" Width="250"
        DpiChanged="Window_DpiChanged">
    <Grid>
        <StackPanel>
            <TextBlock Text="All windows should be per-monitor DPI aware and scale accordingly."
                       Padding="8" TextWrapping="Wrap"></TextBlock>
            
            <Button  Margin="8" Content="Basic Chrome Only" x:Name="btnChromeOnly" Click="btnChromeOnly_Click"></Button>

            <Button  Margin="8" Content="Basic Chrome With TitleBar" x:Name="btnChromeTitle" Click="btnChromeTitle_Click"></Button>

            <Button  Margin="8" Content="Modern lib sample" x:Name="btnMetro" Click="btnMetro_Click"></Button>

            <!--<Button  Margin="8" Content="Basic Chrome Material Lib" x:Name="btnMaterial" Click="btnMaterial_Click"></Button>-->
        </StackPanel>
    </Grid>
</Window>
